<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles.css" />
    <title>Subspace Music</title>
  </head>
  <body>
    <div id="root">
      <header>
        <a href="/">
          <button type="button" class="go-back">
            <img src="/arrow-left.svg" alt="Go back" />
          </button>
        </a>
        <h1>Subspace Music</h1>
      </header>
      <main>
        <form action="/genres/new" method="post">
          <%- include("partials/errors.ejs") %>
          <h2>New genre</h2>
          <div class="form-row">
            <label for="genreName">Name </label>
            <input
              type="text"
              name="genreName"
              id="genreName"
              placeholder="50 characters max"
              required
            />
          </div>
          <div class="form-row">
            <label for="genreDescription">Description </label>
            <textarea
              name="genreDescription"
              id="genreDescription"
              rows="8"
              placeholder="255 characters max"
              maxlength="255"
            ></textarea>
          </div>
          <button type="submit">Submit</button>
        </form>
      </main>
    </div>
  </body>
</html>
