<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles.css" />
    <title>Subspace Music</title>
  </head>
  <body>
    <header>
      <h1>Subspace Music</h1>
    </header>
    <div id="root">
      <main>
        <form action="/albums/new" method="post">
          <%- include("partials/errors.ejs") %>
          <h2>New album</h2>
          <div class="form-row">
            <label for="albumTitle">Title </label>
            <input
              type="text"
              name="albumTitle"
              id="albumTitle"
              placeholder="125 characters max"
              maxlength="125"
              required
            />
          </div>
          <div class="form-row">
            <label for="releaseDate">Release Date </label>
            <input
              type="tel"
              name="releaseDate"
              id="releaseDate"
              min="0"
              max="9999"
              required
            />
          </div>
          <div class="form-row">
            <label for="albumArtist">Artist </label>
            <input
              list="artists"
              id="albumArtist"
              name="albumArtist"
              placeholder="Search artists"
              required
            />
            <datalist id="artists">
              <% if (locals.artists) { %> <% artists.forEach(function(artist) {
              %>
              <option value="<%= artist.name %>"></option>
              <% }); %> <% } %>
            </datalist>
          </div>
          <div class="form-row">
            <label for="albumGenre">Genre </label>
            <input
              list="genres"
              id="albumGenre"
              name="albumGenre"
              placeholder="Search genres"
            />
            <datalist id="genres">
              <% if (locals.genres) { %> <% genres.forEach(function(genre) { %>
              <option value="<%= genre.name %>"></option>
              <% }); %> <% } %>
            </datalist>
          </div>
          <div class="form-row">
            <label for="albumDescription">Description </label>
            <textarea
              name="albumDescription"
              id="albumDescription"
              rows="8"
              placeholder="500 characters max"
              maxlength="500"
            ></textarea>
          </div>
          <div class="form-row">
            <label for="albumCover">Image URL </label>
            <input
              type="url"
              name="albumCover"
              id="albumCover"
              placeholder="Enter a valid URL"
            />
          </div>
          <button type="submit" class="submit-category">Submit</button>
        </form>
      </main>
    </div>
  </body>
</html>
